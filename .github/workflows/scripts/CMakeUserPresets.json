{
  "version": 6,
  "configurePresets": [
    {
      "name": "ci",
      "hidden": true,
      "inherits": "vcpkg",
      "cacheVariables": {
        "VKU_ENABLE_TEST": "ON"
      },
      "environment": {
        "VCPKG_ROOT": "$env{VCPKG_INSTALLATION_ROOT}"
      }
    },
    {
      "name": "windows-latest",
      "inherits": "ci"
    },
    {
      "name": "macos-15",
      "inherits": "ci",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm@18/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm@18/bin/clang++"
      }
    },
    {
      "name": "ubuntu-latest",
      "inherits": "ci",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$env{GCC_BUILD_DIR}/bin/gcc",
        "CMAKE_CXX_COMPILER": "$env{GCC_BUILD_DIR}/bin/g++"
      }
    }
  ]
}