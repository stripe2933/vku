{
  "version": 6,
  "configurePresets": [
    {
      "name": "ci-test",
      "hidden": true,
      "inherits": "vcpkg",
      "cacheVariables": {
        "VKU_ENABLE_TEST": "ON"
      }
    },
    {
      "name": "clang",
      "inherits": "ci-test",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -lc++abi",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      },
      "environment": {
        "VCPKG_ROOT": "$env{VCPKG_INSTALLATION_ROOT}"
      }
    },
    {
      "name": "msvc",
      "displayName": "MSVC",
      "inherits": "ci-test"
    }
  ]
}